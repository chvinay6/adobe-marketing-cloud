<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	jcr:primaryType="nt:unstructured" 
	jcr:title="aemsp_tab_rss"
	sling:resourceType="granite/ui/components/foundation/container">

	<items jcr:primaryType="nt:unstructured">
		<rssFeed 
			jcr:primaryType="nt:unstructured" 
			jcr:title="aemsp_tab_rss"
			sling:resourceType="granite/ui/components/foundation/section">

			<layout 
				jcr:primaryType="nt:unstructured" 
				margin="{Boolean}false"
				sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
				
				<items jcr:primaryType="nt:unstructured">	
	           		<column
	           			jcr:primaryType="nt:unstructured"
	           			sling:resourceType="granite/ui/components/foundation/container">
	
		           		<items jcr:primaryType="nt:unstructured">	
							<rssHeadline jcr:primaryType="nt:unstructured"
		           				   jcr:title="aemsp_rss_headline"
		           				   cq:showOnCreate="{Boolean}true"
		           				   sling:resourceType="granite/ui/components/foundation/form/fieldset">
		           				   <items jcr:primaryType="nt:unstructured">
		           				   
										<rssTitle
						           			jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
											required="{Boolean}true"
											cq:showOnCreate="{Boolean}true"
											fieldLabel="aemsp_rssTitle"
											name="./rssTitle" />	
										<aemsp_rssDescription
						           			jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
											required="{Boolean}true"
											cq:showOnCreate="{Boolean}true"
											fieldLabel="aemsp_rssDescription"
											name="./rssDescription" />											
										<aemsp_rssArticleNumber
						           			jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
											fieldLabel="aemsp_rssArticleNumber"
											required="{Boolean}true"
											cq:showOnCreate="{Boolean}true"
											value="20"
											name="./rssArticleNumber" />	
										
								   </items>
							</rssHeadline>
						</items>
					</column>
				</items>
				
		</rssFeed>

	</items>

</jcr:root>