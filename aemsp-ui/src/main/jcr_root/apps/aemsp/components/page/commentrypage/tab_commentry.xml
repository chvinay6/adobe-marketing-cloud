<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured"
	jcr:title="aemsp_tab_commentry"
	sling:resourceType="granite/ui/components/foundation/container">
             
    <items jcr:primaryType="nt:unstructured">	

		<general
	        jcr:primaryType="nt:unstructured"
	        jcr:title="accelerator_basic_general"
            sling:resourceType="granite/ui/components/foundation/section">
            
            	<layout
            	 	jcr:primaryType="nt:unstructured"
	        		margin="{Boolean}false"
           			sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
           		<items jcr:primaryType="nt:unstructured">	
	           		<column
	           			jcr:primaryType="nt:unstructured"
	           			sling:resourceType="granite/ui/components/foundation/container">
	               
		           		<items jcr:primaryType="nt:unstructured">
		           			<title
		           				jcr:primaryType="nt:unstructured"
		           				sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
		           				fieldLabel="aemsp_commentry_mainheadline_text"
		           				name="./parHead/commentrymainheadline/company"
		           				required="{Boolean}true" />
		           		    <region jcr:primaryType="nt:unstructured"
								name="./parHead/commentryprefix/region"
								fieldLabel="aemsp_commentry_prefix_text"
								multiple="{Boolean}false"
								cq:showOnCreate="{Boolean}true" 
								sling:resourceType="granite/ui/components/foundation/form/select">
								<items jcr:primaryType="nt:unstructured">
									<option1 jcr:primaryType="nt:unstructured"
										text="aemsp_region_other" />
									<option2 jcr:primaryType="nt:unstructured"
										text="aemsp_region_ooe"/>
									<option3 jcr:primaryType="nt:unstructured"
										text="aemsp_region_noe" />
									<option4 jcr:primaryType="nt:unstructured"
										text="aemsp_region_wie"/>
									<option5 jcr:primaryType="nt:unstructured"
										text="aemsp_region_bur"/>
									<option6 jcr:primaryType="nt:unstructured"
										text="aemsp_region_kae"/>
									<option7 jcr:primaryType="nt:unstructured"
										text="aemsp_region_tir"/>
									<option8 jcr:primaryType="nt:unstructured"
										text="aemsp_region_ste"/>
									<option9 jcr:primaryType="nt:unstructured"
										text="aemsp_region_sab"/>
									<option10 jcr:primaryType="nt:unstructured"
										text="aemsp_region_vor"/>
									<option11 jcr:primaryType="nt:unstructured"
										text="aemsp_region_deu"/>
								</items>	
							</region>
		           			<jurisdiction
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
								fieldLabel="aemsp_commentry_jurisdiction"
								name="./jurisdiction"
								cq:showOnCreate="{Boolean}true" />
							<date
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
								fieldLabel="aemsp_commentry_date"
								name="./date"
								required="{Boolean}true"
								cq:showOnCreate="{Boolean}true" />
		           			<category jcr:primaryType="nt:unstructured"
								name="./category"
								fieldLabel="aemsp_commentry_category"
								multiple="{Boolean}false"
								cq:showOnCreate="{Boolean}true"
								sling:resourceType="granite/ui/components/foundation/form/select">
								<items jcr:primaryType="nt:unstructured">
									<option1 jcr:primaryType="nt:unstructured"
										text="aemsp_category_nap"/>
									<option2 jcr:primaryType="nt:unstructured"
										text="aemsp_category_adj" />
									<option3 jcr:primaryType="nt:unstructured"
										text="aemsp_category_bnk"/>
									<option4 jcr:primaryType="nt:unstructured"
										text="aemsp_category_chg" />
									<option5 jcr:primaryType="nt:unstructured"
										text="aemsp_category_cre"/>
									<option6 jcr:primaryType="nt:unstructured"
										text="aemsp_category_del"/>
								</items>	
							</category>											
						</items>
					</column>
				</items>
		</general>
						
	</items>
	
</jcr:root>