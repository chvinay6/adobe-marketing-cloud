<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	jcr:primaryType="nt:unstructured" 
	jcr:title="Image Slider"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content 
		jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/foundation/container">
		<items 
			jcr:primaryType="nt:unstructured">
			<tabs 
				jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/foundation/container">
				<layout 
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/foundation/layouts/tabs"
					type="nav" />
				<items 
					jcr:primaryType="nt:unstructured">
					<image 
						jcr:primaryType="nt:unstructured" 
						jcr:title="aemsp_imageslider_slides"
						sling:resourceType="granite/ui/components/foundation/section">
						<layout 
							jcr:primaryType="nt:unstructured" 
							margin="false"
							sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
						<items 
							jcr:primaryType="nt:unstructured">
							<column 
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container">
								<items 
									jcr:primaryType="nt:unstructured">
									<images 
										jcr:primaryType="nt:unstructured" 
										fieldLabel="aemsp_imageslider_images"
										fieldDescription="aemsp_imageslider_images_description"
										sling:resourceType="granite/ui/components/foundation/form/multifield"
										eaem-nested="">
										<field 
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/foundation/form/fieldset"
											name="./slides">
											<layout 
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
											<items 
												jcr:primaryType="nt:unstructured">
												<column 
													jcr:primaryType="nt:unstructured"
													sling:resourceType="granite/ui/components/foundation/container">
													<items 
														jcr:primaryType="nt:unstructured">
														<image 
															jcr:primaryType="nt:unstructured"
    														autoStart="{Boolean}false"
    														allowUpload="{Boolean}true"
    														required="{Boolean}true"
    														fieldLabel="aemsp_imageslider_image"
    														fileNameParameter="./slideName"
    														fileReferenceParameter="./slideReference"
    														mimeTypes="[image]"
    														multiple="{Boolean}false"
    														name="./image"
    														text="aemsp_imageslider_image_upload"
    														uploadUrl="${suffix.path}"
    														useHTML5="{Boolean}true"
    														sling:resourceType="granite/ui/components/foundation/form/fileupload"/>
														<imgCaption 
															jcr:primaryType="nt:unstructured"
															fieldLabel="aemsp_imageslider_caption"
															required="{Boolean}true"
															name="./caption"
															sling:resourceType="granite/ui/components/foundation/form/textfield" />
														<imgCopyright 
															jcr:primaryType="nt:unstructured"
															fieldLabel="aemsp_imageslider_copyright"
															required="{Boolean}true"
															name="./copyright"
															sling:resourceType="granite/ui/components/foundation/form/textfield" />
													</items>
												</column>
											</items>
										</field>
									</images>
								</items>
							</column>
						</items>
					</image>
					<other 
						jcr:primaryType="nt:unstructured" 
						jcr:title="aemsp_imageslider_options"
						sling:resourceType="granite/ui/components/foundation/section">
						<layout 
							jcr:primaryType="nt:unstructured" 
							margin="false"
							sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
						<items 
							jcr:primaryType="nt:unstructured">
							<column 
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/container">
								<items 
									jcr:primaryType="nt:unstructured">
									<otherFieldset 
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/fieldset">
										<layout 
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
										<items 
											jcr:primaryType="nt:unstructured">
											<headline 
												jcr:primaryType="nt:unstructured"
												fieldLabel="aemsp_imageslider_headline"
												name="./headline"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												required="{Boolean}true" />
										</items>
									</otherFieldset>
								</items>
							</column>
						</items>
					</other>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>