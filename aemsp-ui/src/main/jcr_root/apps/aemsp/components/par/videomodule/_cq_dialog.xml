<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="aemsp_videomodule"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured"
    	sling:resourceType="granite/ui/components/foundation/container">
    	<layout jcr:primaryType="nt:unstructured"
    		margin="{Boolean}false"
    		sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
    		type="nav" />
    	<items  jcr:primaryType="nt:unstructured">
   			<column jcr:primaryType="nt:unstructured"
   				sling:resourceType="granite/ui/components/foundation/container">	
   				<items jcr:primaryType="nt:unstructured">
	  				<videotype jcr:primaryType="nt:unstructured"
						text="aemsp_videmodule_type"
						required="{Boolean}true"
						sling:resourceType="granite/ui/components/foundation/form/radiogroup">
						<items jcr:primaryType="nt:unstructured">
							<option1 jcr:primaryType="nt:unstructured" 
								sling:resourceType="granite/ui/components/foundation/form/radio"
								name="./type"
								value="youtube"
								text="YouTube" />
							<option2 jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/radio"
								name="./type"
								value="vimeo"
								text="Vimeo" />
						</items>			
					</videotype>
					<videoid
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="aemsp_videomodule_id"
						name="./id"
						required="{Boolean}true" />
					<title
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="aemsp_videomodule_title"
						name="./title"/>
					<caption
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="aemsp_videomodule_caption"
						name="./caption"/>
					<copyright
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="aemsp_videomodule_copyright"
						name="./copyright"/>
				</items>  		
			</column>
    	</items>
    </content>
</jcr:root>